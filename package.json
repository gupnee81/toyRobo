{
  "name": "ToyRobot",
  "version": "1.0.0",
  "description": "A robot control system which reads instructions from an input file and prints the final position.",
  "main": "app.ts",
  "scripts": {
    "start": "node dist/app.js input.txt",
    "build": "rimraf dist && npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "dev": "npm run watch",
    "watch": "nodemon --watch ['src/**/*.ts'] --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/app.ts input.txt",
    "test": "mocha --recursive --require ts-node/register test/**/*.test.ts --extensions 'ts' --enable-source-maps",
    "coverage": "nyc npm test"
  },
  "author": "Neelima Gupta",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/eslint": "^7.2.6",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.36",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  }
}